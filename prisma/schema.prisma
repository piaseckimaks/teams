generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                                  Int        @id @default(autoincrement()) @db.UnsignedInt
  firstname                           String     @db.VarChar(30)
  lastname                            String     @db.VarChar(30)
  email                               String     @unique(map: "email") @db.VarChar(50)
  reg_date                            DateTime?  @default(now()) @db.Timestamp(0)
  password                            Password
  avatar                              Avatar?
  friends                             Friend[]
  ReceivedMessages                    Message[]  @relation("Messages_receiverIdToUsers")
  SentMessages                        Message[]  @relation("Messages_senderIdToUsers")
}

model Password{
  id          Int       @id @default(autoincrement()) @db.UnsignedInt
  password    String    @db.VarChar(128)
  salt        String    @db.VarChar(128)
  user        User      @relation(fields: [userId], references: [id])
  userId      Int       @db.UnsignedInt
}

model Email{

}

model Message {
  id                               Int    @id @default(autoincrement()) @db.UnsignedInt
  timestamp                        DateTime
  content                          String @db.Text
  senderId                         Int    @db.UnsignedInt
  receiverId                       Int    @db.UnsignedInt
  Users_Messages_receiverIdToUsers User   @relation("Messages_receiverIdToUsers", fields: [receiverId], references: [id])
  Users_Messages_senderIdToUsers   User   @relation("Messages_senderIdToUsers", fields: [senderId], references: [id])

  @@index([receiverId], map: "Messages_receiverId_fkey")
  @@index([senderId], map: "Messages_senderId_fkey")
}

model Avatar {
    id      Int     @id @default(autoincrement()) @db.UnsignedInt
    avatar  String  @db.Text
    user    User    @relation(fields: [userId], references: [id])
    userId  Int     @db.UnsignedInt
}

model Friend {
    id        Int     @id @default(autoincrement()) @db.UnsignedInt
    friend    User    @relation(name:"friendId",fields: [friendId], references: [id])
    friendId  Int     @db.UnsignedInt
    user      User    @relation(name: "userId",fields: [userId], references: [id])
    usersId   Int     @db.UnsignedInt
}

